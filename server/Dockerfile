FROM node:14-alpine

ARG NODE_ENV
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_DB
ARG POSTGRES_HOST

ARG CORS
ARG JWT_EXP_DAYS
ARG JWT
ARG PREFIX

ENV NODE_ENV $NODE_ENV
ENV POSTGRES_USER $POSTGRES_USER
ENV POSTGRES_PASSWORD $POSTGRES_PASSWORD
ENV POSTGRES_DB $POSTGRES_DB
ENV PREFIX $PREFIX

ENV CORS $CORS
ENV JWT_EXP_DAYS $JWT_EXP_DAYS
ENV JWT $JWT
ENV PREFIX $PREFIX

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .

EXPOSE 3000

CMD [ "npm", "start" ]
